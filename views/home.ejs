<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Luxe Glamping</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      /* Styles for images within the carousel component */
      .carousel-inner img {
        /* Covers the area without distorting the image */
        object-fit: cover;
        height: 600px;
      }

      /* For Cards*/
      .product-img {
        width: 100%; /* Ensures the image takes the full width of the card */
        height: 300px; /* Fixed height for all images */
        object-fit: cover; /* Covers the area without distorting the image */
      }
    </style>
  </head>
  <body>
    <!-- Navigation Bar -->
    <!-- Dark themed Navbar that stays at the top when scrolling -->
    <nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
      <!-- Fills the width of the screen -->
      <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="#">Luxe Glamping</a>
        <!-- Hamburger menus for smaller screens -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <!-- Icon for the hamnburger menu -->
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Collapsible content of the navbar which includes navigation links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <!-- Active link for the current page -->
              <a class="nav-link active" aria-current="page" href="home"
                >Home</a
              >
            </li>
            <!-- Link to checkoutpge -->
            <li class="nav-item">
              <a class="nav-link" href="checkout.html">Checkout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Carousel -->
    <div class="container mt-3">
      <!-- Carousel
      data-bs-ride: allows the slideshow to automatically slide through images -->
      <div id="glampingCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Slides: Images in the carousel -->
        <div class="carousel-inner">
          <div class="carousel-item">
            <img
              src="images/slideshow1.jpg"
              class="d-block w-100"
              alt="Glamping Image 1"
            />
          </div>
          <!-- Additional carousel items -->
          <div class="carousel-item">
            <img
              src="images/slideshow2.jpg"
              class="d-block w-100"
              alt="Glamping Image 2"
            />
          </div>
          <div class="carousel-item">
            <img
              src="images/fest.jpg"
              class="d-block w-100"
              alt="Glamping Image 3"
            />
          </div>
          <div class="carousel-item">
            <img
              src="images/slideshow4.jpg"
              class="d-block w-100"
              alt="Glamping Image 4"
            />
          </div>
          <div class="carousel-item">
            <img
              src="images/campNight.jpg"
              class="d-block w-100"
              alt="Glamping Image 5"
            />
          </div>
        </div>

        <!-- Controls for Carousel: Previous and Next Buttons -->
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#glampingCarousel"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#glampingCarousel"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- Page content: Title and Links to Products -->
      <!-- This div contains the main title and associated actions for the page, centered with top and bottom margins -->
      <div class="text-center mt-5 mb-5">
        <!-- Main heading displayed in a larage and bold font -->
        <h1 class="display-3 fw-bold">Welcome to Luxe Glamping</h1>
        <p class="fs-4">The Ultimate Camping experience</p>
        <!-- Button linking to the checkout page.-->
        <a class="btn btn-primary" href="checkout.html" role="button"
          >Checkout</a
        >
      </div>

      <!-- Product links from the database styled as cards -->
      <!-- Container row with spacing between cards -->
      <div class="row g-3">
        <!-- Luxe Glamping Pass -->
        <div class="col-md-6">
          <!-- Link to the product page for the Luxe Glamping Pass, styled as a card with no text decoration and handling overflow -->

          <a
            href="/shop?rec=1"
            class="card text-white text-decoration-none overflow-hidden"
          >
            <img
              src="images/homeCamp.jpg"
              class="card-img product-img"
              alt="Luxe Glamping Pass"
            />
            <!-- Overlay that appears on top of the image -->

            <div
              class="card-img-overlay d-flex justify-content-center align-items-center"
            >
              <!-- Product name displayed in a semi-transparent black rectangle to ensure readability over varied backgrounds -->
              <h3 class="text-center bg-black bg-opacity-50 px-2 py-1 rounded">
                Luxe Glamping Pass
              </h3>
            </div>
          </a>
        </div>

        <!-- Luxe Purple Car Park Pass -->
        <div class="col-md-6">
          <!-- Link to the product page for the Luxe Purple Car Park Pass, styled as a card with no text decoration and handling overflow -->
          <a
            href="/shop?rec=2"
            class="card text-white text-decoration-none overflow-hidden"
          >
            <img
              src="images/CarPark2.jpg"
              class="card-img product-img"
              alt="Luxe Purple Car Park Pass"
            />
            <!-- Overlay that appears on top of the image -->

            <div
              class="card-img-overlay d-flex justify-content-center align-items-center"
            >
              <!-- Product name displayed in a semi-transparent black rectangle to ensure readability over varied backgrounds -->

              <h3 class="text-center bg-black bg-opacity-50 px-2 py-1 rounded">
                Luxe Purple Car Park Pass
              </h3>
            </div>
          </a>
        </div>

        <!-- Shuttle Bus -->
        <div class="col-md-6">
          <!-- Link to the product page for the Shuttle Bus, styled as a card with no text decoration and handling overflow -->

          <a
            href="/shop?rec=3"
            class="card text-white text-decoration-none overflow-hidden"
          >
            <!-- Product image with descriptive alt text -->
            <img
              src="images/ShuttleBus1.jpg"
              class="card-img product-img"
              alt="Shuttle Bus"
            />
            <div
              class="card-img-overlay d-flex justify-content-center align-items-center"
            >
              <!-- Product name displayed in a semi-transparent black rectangle to ensure readability over varied backgrounds -->
              <h3 class="text-center bg-black bg-opacity-50 px-2 py-1 rounded">
                Shuttle Bus
              </h3>
            </div>
          </a>
        </div>

        <!-- Security Locker -->
        <div class="col-md-6">
          <!-- Link to the product page for the Security Locker, styled as a card with no text decoration and handling overflow -->

          <a
            href="/shop?rec=4"
            class="card text-white text-decoration-none overflow-hidden"
          >
            <img
              src="images/Locker3.jpg"
              class="card-img product-img"
              alt="Security Locker"
            />
            <!-- Overlay that appears on top of the image -->
            <div
              class="card-img-overlay d-flex justify-content-center align-items-center"
            >
              <!-- Product name displayed in a semi-transparent black rectangle to ensure readability over varied backgrounds -->

              <h3 class="text-center bg-black bg-opacity-50 px-2 py-1 rounded">
                Security Locker
              </h3>
            </div>
          </a>
        </div>

        <!-- Cooler Box -->
        <div class="col-md-6">
          <!-- Link to the product page for the Cooler Box, styled as a card with no text decoration and handling overflow -->

          <a
            href="/shop?rec=5"
            class="card text-white text-decoration-none overflow-hidden"
          >
            <img
              src="images/Cooler2.jpg"
              class="card-img product-img"
              alt="Cooler Box"
            />
            <!-- Overlay that appears on top of the image -->

            <div
              class="card-img-overlay d-flex justify-content-center align-items-center"
            >
              <!-- Product name displayed in a semi-transparent black rectangle to ensure readability over varied backgrounds -->
              <h3 class="text-center bg-black bg-opacity-50 px-2 py-1 rounded">
                Cooler Box
              </h3>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Newsletter Subscription Form at the bottom on home page-->
    <!-- Container with vertical margins and padding, light background, bordered, and rounded -->
    <div
      class="container my-5 py-4 bg-light border border-2 border-secondary rounded"
    >
      <!-- Heading centered at the top of the form -->
      <h3 class="text-center">Subscribe to Our Newsletter</h3>
      <p class="text-center">
        Stay updated with the latest news about our Glamping services.
      </p>
      <!-- Form element with client-side validation enabled -->
      <form id="newsletter-form" class="needs-validation" novalidate>
        <!-- Row to center the email input field on the page -->
        <div class="row justify-content-center">
          <div class="col-md-6">
            <!-- Form group for email input -->
            <div class="mb-3">
              <label for="newsletter-email" class="form-label"
                >Email Address:</label
              >
              <input
                type="email"
                class="form-control"
                id="newsletter-email"
                name="email"
                placeholder="Enter your email"
                required
              />
              <!-- Feedback message to show when the input validation fails -->
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>
            <!-- Button to submit the form, styled to occupy full width of the form column -->
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                Subscribe
              </button>
            </div>
            <!-- Hidden message container that will display submission results -->
            <div
              class="mt-3 text-center"
              id="subscription-message"
              style="display: none"
            ></div>
          </div>
        </div>
      </form>
    </div>

    <!-- Bootstrap 5 JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script>
      document
        .getElementById("newsletter-form")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // Prevent the form's default submission behavior

          // Retrieve the value of the email input field
          const emailInput = document.getElementById("newsletter-email").value;

          // Access the DOM element where subscription messages will be displayed
          const subscriptionMessage = document.getElementById(
            "subscription-message"
          );

          // Email validation pattern found at - https://emaillistvalidation.com/blog/email-validation-in-javascript-using-regular-expressions-the-ultimate-guide/
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

          // If the input is empty
          if (emailInput === "") {
            subscriptionMessage.textContent = "Email cannot be blank.";
            subscriptionMessage.className = "alert alert-danger";
          } else if (emailRegex.test(emailInput)) {
            // Display a success message if the email is valid
            subscriptionMessage.textContent = "Thank you for subscribing!";
            subscriptionMessage.className = "alert alert-success";
          } else {
            // Display an error message if the email is invalid
            subscriptionMessage.textContent =
              "Please enter a valid email address.";
            subscriptionMessage.className = "alert alert-danger";
          }

          // Set the display style of the message to 'block' to make it visible
          subscriptionMessage.style.display = "block";
        });
    </script>
    <!-- Random Images for the Carousel-->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Select all carousel items and indicator elements
        const items = document.querySelectorAll(".carousel-item");
        const indicators = document.querySelectorAll(".carousel-indicators li");

        // Generate a random index based on the number of carousel items
        const randomIndex = Math.floor(Math.random() * items.length);

        // Loop through all carousel items
        items.forEach((item, index) => {
          // Toggle the 'active' class based on whether the current index matches the random index
          item.classList.toggle("active", index === randomIndex);
        });

        // Loop through all carousel indicators
        indicators.forEach((indicator, index) => {
          // Toggle the 'active' class on the indicator corresponding to the randomly chosen carousel item
          indicator.classList.toggle("active", index === randomIndex);
        });
      });
    </script>
  </body>
</html>
